{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "better-shot",
  "version": "0.1.0",
  "identifier": "com.kartiklabhshetwar.bettershot",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Better Shot",
        "width": 800,
        "height": 600,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**",
          "/tmp/**",
          "/var/**",
          "$HOME/Pictures/**",
          "$PICTURES/**"
        ]
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
